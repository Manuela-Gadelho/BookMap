<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context=".HomeActivity">

    <!-- App Bar Personalizada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_primary"
        android:padding="16dp"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minha Estante"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Filtros de Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="LENDO"
            android:textColor="@color/blue_primary"
            android:textStyle="bold"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="QUERO LER"
            android:textColor="@color/gray_text"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="LIDOS"
            android:textColor="@color/gray_text"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Leitura Atual"
                android:textStyle="bold"
                android:textColor="@color/blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Card Livro Atual -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="24dp">

                <!-- Placeholder Capa -->
                <View
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:background="#CCCCCC"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp">
                    <TextView
                        android:text="Engenharia de Software"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Ian Sommerville"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progress="45"
                        style="?android:attr/progressBarStyleHorizontal"/>
                    <TextView
                        android:text="45% Concluído"
                        android:textSize="12sp"
                        android:layout_gravity="end"
                        android:textColor="@color/blue_primary"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:text="Sua Lista"
                android:textStyle="bold"
                android:textColor="@color/blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Item Lista 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_marginBottom="8dp">
                <View
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:background="#CCCCCC"/>
                <TextView
                    android:text="O Senhor dos Anéis: A Sociedade do Anel"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Item Lista 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_marginBottom="8dp">
                <View
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:background="#CCCCCC"/>
                <TextView
                    android:text="Dom Casmurro"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Menu Inferior Simulado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView android:text="[ESTANTE]" android:textStyle="bold" android:textColor="@color/blue_primary" android:padding="16dp"/>
        <TextView android:text="[MAPA]" android:textColor="@color/gray_text" android:padding="16dp"/>
        <TextView android:text="[CLUBES]" android:textColor="@color/gray_text" android:padding="16dp"/>
        <TextView android:text="[PERFIL]" android:textColor="@color/gray_text" android:padding="16dp"/>
    </LinearLayout>
</LinearLayout>